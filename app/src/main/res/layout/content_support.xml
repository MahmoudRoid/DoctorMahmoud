<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_support"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ir.unicoce.doctorMahmoud.Activity.SupportActivity"
    tools:showIn="@layout/activity_support"
    android:orientation="vertical"
    tools:ignore="MissingPrefix"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--3 ta social network bala-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.5">
                <!--website-->
                <android.support.v7.widget.CardView
                    android:id="@+id/support_website"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:contentPadding="10dp"
                    android:layout_weight="0.5">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_website"/>

                </android.support.v7.widget.CardView>
                <!--telegram-->
                <android.support.v7.widget.CardView
                    android:id="@+id/support_telegram"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:contentPadding="10dp"
                    android:layout_weight="0.5">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_telegram2"/>

                </android.support.v7.widget.CardView>
                <!--instagram-->
                <android.support.v7.widget.CardView
                    android:id="@+id/support_instagram"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:contentPadding="10dp"
                    android:layout_weight="0.5">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_instagram"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--3 ta social network paeen-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.5">
                <!--google plus-->
                <android.support.v7.widget.CardView
                    android:id="@+id/support_googleplus"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:contentPadding="10dp"
                    android:layout_weight="0.5">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_googlepluse"/>

                </android.support.v7.widget.CardView>
                <!--email-->
                <android.support.v7.widget.CardView
                    android:id="@+id/support_email"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:contentPadding="10dp"
                    android:layout_weight="0.5">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mail"/>

                </android.support.v7.widget.CardView>
                <!--apple-->
                <android.support.v7.widget.CardView
                    android:id="@+id/support_apple"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:contentPadding="10dp"
                    android:layout_weight="0.5">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_applestore"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!--telephone  and  address -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/company_tell"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        fontPath="fonts/SansLight.ttf"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/company_address"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        fontPath="fonts/SansLight.ttf"
                        android:layout_weight="0.5"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

    </LinearLayout>

</LinearLayout>
