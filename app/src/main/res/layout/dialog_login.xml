<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle_dialoglogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="صفحه ورود"
                android:layout_margin="10dp"
                fontPath="fonts/SansLight.ttf"
                android:gravity="center"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til1_dialoglogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fontPath="fonts/SansLight.ttf"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/edtLogin_dialoglogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="نام کاربری"
                    fontPath="fonts/SansLight.ttf"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="center" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til2_dialoglogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fontPath="fonts/SansLight.ttf"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/edtLoginPassword_dialoglogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="رمز عبور"
                    fontPath="fonts/SansLight.ttf"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="center" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ثبت نام"
                    android:layout_margin="10dp"
                    android:id="@+id/btnRegShow_dialoglogin"
                    fontPath="fonts/SansLight.ttf"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/btnLogin_dialoglogin"
                    android:text="ورود"
                    fontPath="fonts/SansLight.ttf"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>