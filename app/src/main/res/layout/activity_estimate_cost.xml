<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_estimate_cost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">


    <include
        android:id="@+id/toolbar"
        layout="@layout/appbar_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/estimate_cost_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/estimate_button"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estimate_cost"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16sdp"
            android:layout_centerInParent="true"
            fontPath="fonts/SansLight.ttf"/>

        <TextView
            android:id="@+id/estimate_cost_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/White"
            android:visibility="gone"
            android:text="0"
            android:layout_marginLeft="@dimen/_8sdp"
            fontPath="fonts/SansLight.ttf"/>

    </RelativeLayout>

</RelativeLayout>
