<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Style default
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>


    <style 
        name="AppTheme" parent="AppBaseTheme">
        <item name="windowNoTitle">true</item>

        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorAccent">@color/AccentColor</item>

        <item name="android:textColorPrimary">@color/PrimaryText</item>
        <item name="android:textColor">@color/PrimaryText</item>
        <item name="android:textColorSecondary">@color/SecondText</item>

        <item name="android:windowBackground">@color/SecondColor</item>

        <!--<item name="android:spinnerItemStyle">@style/MySpinner</item>-->

    </style>

    <style name="FullscreenTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomFullScreenTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="bs_dialogBackground">@color/cardview_light_background</item>
        <item name="bs_dividerColor">@color/abc_search_url_text_pressed</item>
        <item name="bs_numColumns">3</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

